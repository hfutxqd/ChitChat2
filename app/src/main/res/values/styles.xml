<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/app_purple_dark</item>
        <item name="colorAccent">@color/app_orange</item>
    </style>

    <style name="WelcomeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHighlight">#66DFA2E9</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/app_purple_dark</item>
        <item name="colorAccent">@color/app_orange</item>
        <item name="android:textColorHighlight">#66FF9800</item>
    </style>

    <style name="MainActivity.ActionBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="MainActivity.TabLayout" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_orange</item>
    </style>

    <style name="WelcomeActivity.TextViewStartAsBt">
        <item name="android:background">@drawable/selectable_item_background_purple_light</item>
    </style>

    <style name="ExploreDetailActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/app_purple_dark</item>
        <item name="colorAccent">@color/app_orange</item>
    </style>

    <style name="PublishActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/app_purple_dark</item>
        <item name="colorAccent">@color/app_orange</item>
    </style>

    <style name="ImageViewerActivity" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="GalleryActivity" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/app_purple_dark</item>
        <item name="colorAccent">@color/app_orange</item>
    </style>

    <style name="SettingsActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/app_purple_dark</item>
        <item name="colorAccent">@color/app_orange</item>
    </style>

    <style name="SelectableItemForeground">
        <item name="android:foreground">@drawable/selectable_item_background</item>
    </style>

    <style name="SelectableItemForeground.Light">
        <item name="android:foreground">@drawable/selectable_item_background_light</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:background">@drawable/selectable_item_background</item>
    </style>

    <style name="SelectableItemBackground.Light">
        <item name="android:background">@drawable/selectable_item_background_light</item>
    </style>

    <style name="SelectableItemBackground.Borderless">
        <item name="android:background">@drawable/selectable_item_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
