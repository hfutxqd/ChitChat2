<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    style="@style/SelectableItemBackground">

    <ImageView
        android:id="@+id/iv_avatar_chat_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/cd_avatar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@id/iv_avatar_chat_list"
        android:layout_toRightOf="@id/iv_avatar_chat_list"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_time_chat_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="@color/black_38p"
            tools:ignore="RelativeOverlap"/>

        <TextView
            android:id="@+id/tv_name_chat_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_time_chat_list"
            android:layout_toLeftOf="@id/tv_time_chat_list"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="@color/black_87p"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_unread_chat_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_time_chat_list"
            android:layout_marginTop="2dp"
            android:textSize="18sp"
            android:textColor="@color/red_500"/>

        <com.ywwynm.emoji.EmojiTextView
            android:id="@+id/tv_content_chat_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_chat_list"
            android:layout_toStartOf="@id/tv_unread_chat_list"
            android:layout_toLeftOf="@id/tv_unread_chat_list"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/black_54p"
            android:maxLines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/black_26p"/>

</RelativeLayout>