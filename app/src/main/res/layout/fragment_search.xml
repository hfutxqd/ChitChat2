<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout
        android:id="@+id/ll_empty_state_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">



    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_friend_search"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/friends"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_friend_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/full_cardview_margin_side"
                android:layout_marginRight="@dimen/full_cardview_margin_side"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_friend_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_chat_details_search"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/chat_details"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_chat_details_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/full_cardview_margin_side"
                android:layout_marginRight="@dimen/full_cardview_margin_side"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_chat_details_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>