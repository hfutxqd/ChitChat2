<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_full"
    android:layout_marginBottom="@dimen/explore_item_margin_bottom"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/explore_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/explore_item_nickname"
                android:textSize="16sp"
                android:textColor="@color/blue_grey_500"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/explore_item_time"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="64dp"
        android:paddingStart="64dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp">

        <com.room517.chitchat.ui.views.ExpandableTextView
            android:id="@+id/explore_item_text"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:maxCollapsedLines="5"
            expandableTextView:animDuration="200">
            <TextView
                android:id="@id/expandable_text"
                android:autoLink="all"
                android:textSize="16sp"
                android:textColor="@color/black_87p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="end|bottom"
                android:background="@android:color/transparent"/>
        </com.room517.chitchat.ui.views.ExpandableTextView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/explore_item_images"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.room517.chitchat.ui.views.LocationLayout
                android:id="@+id/explore_location"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_location_black_18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
                <TextView
                    android:id="@+id/location_view_text"
                    android:text="@string/explore_location"
                    android:textColor="@color/blue_grey_500"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.room517.chitchat.ui.views.LocationLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:padding="@dimen/container_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/explore_item_like"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:id="@+id/explore_item_like_count"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/explore_item_comment"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_comment_black_24dp"
                    android:layout_gravity="center"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:id="@+id/explore_item_comment_count"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/blue_grey_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>